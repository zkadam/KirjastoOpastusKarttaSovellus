@model KirjastoAppScrum.Models.Logins

@{
    ViewBag.Title = "Sisaankirjautuminen";
}

<h2>Sisäänkirjautuminen</h2>

@using (Html.BeginForm("Auktorisointi", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.LoginID)*@

        @*Teksti ruutu johon käyttäjä laittaa käyttäjä nimen. -FW*@
        <div class="form-group">
            @Html.LabelFor(model => model.Nimi,"Käyttäjänimi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nimi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nimi, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Teksti ruutu salasanalle => Hash tällä hetkellä, joka on kategorisoitu salasanaksi. -FW*@
        <div class="form-group">
            @Html.LabelFor(model => model.Hash,"Salasana" ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hash, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hash, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Tänne tulee hälytys teksti jos olet kirjoittanut jotain väärin tai epäonnistuit kirjautumaan. -FW*@
        <label class="text-danger">
            @Html.DisplayFor(model => model.LoginErrorMessage)
        </label>

        @*Sisäänkirjautumis painike ja peruuta painike. -FW*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kirjaudu sisään" class="btn btn-success" />
                <a href="~/Home/Index" class="btn btn-danger">Peruuta</a>
            </div>
        </div>
    </div>
}



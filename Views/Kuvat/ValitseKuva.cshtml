@model IEnumerable<KirjastoAppScrum.Models.Kuvat>

@{
    ViewBag.Title = "Index";
}

<h2>Valitse kuva: @ViewBag.Kategoria -lle</h2>

<p>
    @Html.ActionLink("Lataa uusi kuva", "Create", null, new { @class = "btn btn-primary text-white" })
</p>

<div class="justify-content-center">
    @foreach (var item in Model)
    {


        <div class="card mt-1 mr-1" style="width:30vw;border-color:blueviolet ;float:left;">
            @if (item.Image != null)
            {
                var base64 = Convert.ToBase64String(item.Image);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img class="card-img-top" style="max-height: 30vh" src="@imgsrc" alt="@item.AltText">
            }
            else
            {
                <img class="card-img-top" src="~/Icons/house.svg" alt="Kuva ei latautunut">

            }
            <div class="card-body">
                <h4 class="card-title"> @Html.DisplayFor(modelItem => item.AltText)</h4>
                <p class="card-text">@Html.DisplayFor(modelItem => item.ImagePath)</p>

                @if (ViewBag.kuvaID != item.KuvaId)
                {
                    using (Html.BeginForm("AsetaKuva", "Kuvat", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                     
                        @Html.ActionLink("Valitse", "AsetaKuva", new { id = ViewBag.KoordId, kuvaID = item.KuvaId }, new { @class = "btn btn-success text-white" })

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="hidden" id="id" name="id" value="@ViewBag.KoordId" />
                                <input type="hidden" id="kuvaID" name="kuvaID" value=@item.KuvaId />
                                <input type="submit" value="Valitse kuva" class="btn btn-success" />
                            </div>
                        </div>
                        }
                    }
                    else
                    {
                        @Html.ActionLink("Poista kuva valinta", "PoistaKuva", "Kuvat", new { id = ViewBag.KoordId, kategoria = ViewBag.Kategoria }, new { @class = "btn btn-secondary text-white" })
                         }

            </div>
        </div>



  }
</div>

